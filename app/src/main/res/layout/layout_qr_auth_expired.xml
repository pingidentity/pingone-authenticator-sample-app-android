<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/layout_timed_out_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_invalid"
        android:layout_above="@+id/text_view_qr_expired"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/cd_invalid_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/icon_timeout"/>

    <TextView
        android:id="@+id/text_view_qr_expired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:text="@string/qr_view_timeout_layout_message"
        android:textAppearance="@font/proxima_nova_regular"
        android:textColor="@color/color_main_background_white"
        android:textSize="22sp" />
</RelativeLayout>